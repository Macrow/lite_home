= simple_form_for @user, as: :user, url: (@user.new_record? ? admin_users_path : admin_user_path(@user)), html: {class: 'form-horizontal'} do |f|
  = f.input :name
  = f.input :email
  = f.input :password
  = f.input :password_confirmation
  = f.input :sex
  = f.input :address
  = f.input :im
  = f.input :telephone
  = f.input :personal_sign
  .form-actions
    = f.submit class: 'btn btn-primary'
    = link_to t('lite_home.actions.cancel'), admin_users_path, class: 'btn'