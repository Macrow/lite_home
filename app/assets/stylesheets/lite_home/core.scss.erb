@import "bootstrap";
@import 'compass/css3';
@import 'compass/utilities';
 
body {
  padding-top: 60px;
  background-image: url('<%= asset_path('lite_home/shattered.png') %>');
}

#lite_home {
  margin-bottom: 5px;
  .white {
    background: white;
  }
  .user_image {
    text-align: center;
    height: 360px;
    line-height: 360px;
  }
  .sidebar {
    margin: 20px;
  }
  .user {
    margin: 20px 0;
    .name {
      font-size: 1.5em;
      font-weight: bold;
    }
    .float_right {
      @include float-right;
    }
    .right {
      text-align: right;
    }
    .avatar img {
      vertical-align: top;
    }
  }
  .user_show {
    padding: 20px;
    .float_right {
      @include float-right;
    }
    .name {
      font-size: 1.5em;
      font-weight: bold;
    }
    .right {
      text-align: right;
    }
  }
  a {
    &:hover { 
      text-decoration: none;
    }
  }
  .breadcrumb {
    i {
      margin-right: 3px;
    }
  }
  .pagination {
    ul {
      @include float-right;
      background: white;      
    }
  }
  .highlight {
    background-color: yellow;
  }
}

@import "bootstrap-responsive";